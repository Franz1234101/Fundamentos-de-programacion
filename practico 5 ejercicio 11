#include <stdio.h>
#include <math.h>
#define PI 3.1416

int main() {
    int opcion;
    float L, R, B, H, area;

    printf("MENU DE AREAS:\n");
    printf("1. Cuadrado\n2. Circulo\n3. Triangulo\n");
    printf("Elija una opcion: ");
    scanf("%d", &opcion);

    switch(opcion) {
        case 1:
            printf("Ingrese el lado: ");
            scanf("%f", &L);
            area = L * L;
            printf("Area del cuadrado: %.2f\n", area);
            break;
        case 2:
            printf("Ingrese el radio: ");
            scanf("%f", &R);
            area = PI * R * R;
            printf("Area del circulo: %.2f\n", area);
            break;
        case 3:
            printf("Ingrese base y altura: ");
            scanf("%f %f", &B, &H);
            area = (B * H) / 2;
            printf("Area del triangulo: %.2f\n", area);
            break;
        default:
            printf("Opcion no valida.\n");
    }

    return 0;
}
