#include <stdio.h>

int main() {
    float parcial1, parcial2, practico, final, promedio;
    int faltas;
    char continuar;

    do {
        printf("Ingrese nota del primer parcial: ");
        scanf("%f", &parcial1);
        printf("Ingrese nota del segundo parcial: ");
        scanf("%f", &parcial2);
        printf("Ingrese nota del examen practico: ");
        scanf("%f", &practico);
        printf("Ingrese nota del examen final: ");
        scanf("%f", &final);
        printf("Ingrese numero de faltas: ");
        scanf("%d", &faltas);

        if (faltas > 48 * 0.2)
            final = 0;

        promedio = (parcial1 * 0.4 + parcial2 * 0.4 + practico * 0.2 + final * 0.4);

        printf("\nPromedio final: %.2f\n", promedio);
        if (promedio >= 51)
            printf("Resultado: APROBADO\n");
        else
            printf("Resultado: REPROBADO\n");

        printf("\nÂ¿Desea ingresar otro alumno? (s/n): ");
        scanf(" %c", &continuar);

    } while (continuar == 's' || continuar == 'S');

    return 0;
}
