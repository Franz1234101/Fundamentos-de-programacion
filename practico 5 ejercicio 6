#include <stdio.h>
#include <math.h>

int main() {
    double a, b, c, discriminante, x1, x2;

    printf("Ingrese a, b y c: ");
    scanf("%lf %lf %lf", &a, &b, &c);

    if (a == 0) {
        if (b == 0)
            printf("No es una ecuacion valida.\n");
        else
            printf("Es una ecuacion lineal. x = %.2lf\n", -c / b);
    } else {
        discriminante = b*b - 4*a*c;

        if (discriminante > 0) {
            x1 = (-b + sqrt(discriminante)) / (2*a);
            x2 = (-b - sqrt(discriminante)) / (2*a);
            printf("Dos soluciones reales: x1 = %.2lf, x2 = %.2lf\n", x1, x2);
        } else if (discriminante == 0) {
            x1 = -b / (2*a);
            printf("Una solucion doble: x = %.2lf\n", x1);
        } else {
            double real = -b / (2*a);
            double imag = sqrt(-discriminante) / (2*a);
            printf("Soluciones complejas:\n");
            printf("x1 = %.2lf + %.2lfi\nx2 = %.2lf - %.2lfi\n", real, imag, real, imag);
        }
    }
    return 0;
}
