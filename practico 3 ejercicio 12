#include <stdio.h>

int main() {
    int a, b, mcd, resto, temp;
    printf("Ingrese dos numeros: ");
    scanf("%d %d", &a, &b);

    int x = a, y = b;
    while(b != 0) {
        resto = a % b;
        a = b;
        b = resto;
    }
    mcd = a;
    int mcm = (x * y) / mcd;

    printf("El MCM es: %d\n", mcm);
    return 0;
}
